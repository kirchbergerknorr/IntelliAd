<config>
    <tabs>
        <kirchbergerknorr translate="label" module="kk_intelliad">
            <label>kirchbergerknorr</label>
            <sort_order>1</sort_order>
        </kirchbergerknorr>
    </tabs>
    <sections>
        <kk_intelliad module="kk_intelliad">
            <label>kirchbergerknorr IntelliAd</label>
            <tab>kirchbergerknorr</tab>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="kk_intelliad">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment></comment>
                    <fields>
                        <enable>
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <add_to>
                            <label>Script Position</label>
                            <frontend_type>select</frontend_type>
                            <source_model>kk_intelliad/system_config_source_addto</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Here you can choose the script postion in you html code. "Head" will work always.
                                "Before Body End" might not work on custom themes.
                            </comment>
                        </add_to>
                        <customer_id>
                            <label>Customer Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Please enter your Customer Id here</comment>
                        </customer_id>
                    </fields>
                </general>
            </groups>
        </kk_intelliad>
    </sections>
</config>
